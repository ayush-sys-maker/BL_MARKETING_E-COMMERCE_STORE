<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PRODUCT | BL MARKETING</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin>
  <link href="https://api.fontshare.com/v2/css?f[]=satoshi@301&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="homecss.css"> 


  <style>
    .nameprice{
      margin-top: 40px;
    }

.colorarea>select{
 width: 100px;
margin-top: 40px;
 font-size: medium;
 margin-left: 10px;
 margin-bottom: 20px;
}

.carousel,
      .carousel-inner,
    .carousel-item img {
        width: 80%!important;
        margin-left: 100px;
        margin-top: 10px;
        max-height: 750px;
        object-fit:contain;
       
        border-radius:5%;
      }

  

    /* Mobile adjustments */
@media (max-width: 768px) {
 
 

  .nameprice {
    display: flex;
    justify-content: space-between; /* Spread product name & price */
    align-items: center;
    margin: 0 20px;
  }

  .category {
    display: flex;
    justify-content: end;
    margin-right: 18px;
    opacity: 0.5;
  }
.colorarea>select{
 width: 90px;
 height: 30px;
 font-size: small;
 margin-left: 10px;
 margin-top: -2px;
}

  .size {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin: 15px 0 40px 0; /* top + bottom spacing */
  }

  .cart {
    display: block;
    width: 90%;
    max-width: 370px;
    margin: 20px auto; /* centered with spacing */
  }

  .colorarea {
  position: relative;
  top: -220px;
  

  }



  .cake {
    font-size: 18px;
    margin: 30px 20px; /* spacing instead of pushing */
  }
 
}

    /* General responsive tweaks */
    @media (max-width: 991.98px) {
      .carousel,
      .carousel-inner,
      .carousel-item img {
        width: 100%!important;
          
        max-height: 450px;
        object-fit:contain;
        margin: 0!important;
        padding: 0!important;
        border-radius: 5%;
      }
      .fontstyle, .price, .cake {
        text-align: center;
      }
    }
    
  </style>
</head>
<body>
  
  
<!--NAVBAR--> 
<header class="sticky-top bg-white shadow-sm">
  <nav class="navbar navbar-expand-lg container ">
    <div class="container-fluid  navbarcontent   ">
      <!-- Logo/Brand -->
 <!-- Logo/Brand -->
  <div class="navbar-brand" href="#">
    <img class="img-fluid" src="Bl_logo.png" alt="Bl_logo">
</div>      
      <!-- Mobile Toggle -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <!-- Main Content -->
      <div class="collapse navbar-collapse" id="navbarContent">
        <!-- Menu -->
        <ul class="navbar-nav gap-lg-4 gap-2 ms-lg-5 ps-lg-5 mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link" href="/home">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/sportswear">Sportswear</a></li>
          <li class="nav-item"><a class="nav-link" href="/WOMEN">Women</a></li>
          <li class="nav-item"><a class="nav-link" href="/SOCKS">Socks </a></li>
        </ul>
        
        <!-- Search -->
        <form class="d-flex ms-lg-5 me-lg-0 mx-auto my-2 my-lg-0" role="search"  action="/search" method="get"  >
          <div class="input-group   ">
            <input class="form-control" type="search" placeholder="Search" name="q">
            <button class="btn btn-outline-secondary" type="submit">
              <i class="fas fa-search"></i>
            </button>
          </div>
        </form>
        
        <!-- Actions -->
        <div class="d-flex gap-2 align-items-center ms-lg-5">
        
        
       


<!-- Cart button -->


 <% if(!user){ %>
  <!-- Login button -->
  <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#signInModal">
    Sign In
  </button>
  <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#loginModal">
   Login
  </button>
  <% }else{ %>
    <button  class="btn btn-primary  rounded-pill" onclick="window.location.href='/order/my-orders'" style="font-size: small;"  >MY ORDER</button>

  <form action="/auth/logout" method="post">
  <button type="submit" class="btn fs-6 " >
   <i class="fas fa-sign-out-alt"></i>
  </button>

  </form>
  <% } %>
  <button class="btn position-relative p-1">
    <a href="/cart"><i class="fas fa-shopping-cart fs-5"></i></a>
   </button>

        </div>
      </div>
    </div>
  </nav>
</header>


  <!-- PRODUCT SECTION -->
  <div class="container ">
    <div class="row g-4">
      
      <!-- Product Image / Carousel -->
      <div class="col-lg-8   product  ">
        <div id="carouselExampleFade" class="carousel slide carousel-fade">
          <div class="carousel-inner">
            <picture>
              <source  media="(max-width: 768px)" srcset="<% product.mobile_image_url %>">
              <source media="(min-width: 768px)" srcset="<% product.desktop_image_url %>">
              <img src="<%= product.desktop_image_url %>" class="d-block w-100" alt="Product Image">
            </picture>
          </div>
          <button class="carousel-control-prev btn-outline-dark" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
          </button>
        </div>
      </div>

      <!-- Product Info -->
      <div class="col-12 col-lg-4 mt-4 mt-lg-0">
        <div class="nameprice">
          <p class="fontstyle    fw-bold  "><%= product.name %></p>
          <p class="price"><%= product.price %></p>
        </div>
        <p class="category     "><%= product.category %></p>
<form action="/cart/add/<%= product.category %>/<%= product.id %>" method="GET">
        <!-- Size selection -->
        <p class="mt-4 fw-bold fontstyle">Size</p>
        <div class="size mt-2 d-flex flex-wrap gap-2" name="size"  >
          <% product.sizes.forEach(size => { %>
            <button type="button" class="btn btn-outline-dark size-btn" data-size="<%= size %>"><%= size %></button>
          <% }) %>
        </div>
        <input type="hidden" name="size" id="Selectsize">
        
        

        <!-- Add to Cart -->
        <button class="btn btn-dark fw-bold mt-4 cart text-white" type="submit">ADD TO CART</button>

        <!-- Color selection -->
        <div class="colorarea">
          
          <select name="color" class="form-select color">
            <option value="" disabled selected> Color</option>
            <% product.colors.forEach(color => { %>
              <option value="<%= color %>"><%= color %></option>
            <% }) %>
          </select>
          
        
        </div>
</form>
        <!-- Product Info (Delivery/Return/COD) -->
        <div class="mt-3 cake">
          <p class="d-flex align-items-center gap-2"><i class="fas fa-truck"></i> Free Delivery Above ₹999</p>
          <p class="d-flex align-items-center gap-2"><i class="fas fa-exchange-alt"></i> 10 Days Return Policy</p>
          <p class="d-flex align-items-center gap-2"><i class="fas fa-money-bill-wave"></i> COD Above ₹499</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" crossorigin="anonymous"></script>

  <script>
    // Size selection handler
    document.querySelectorAll('.size-btn').forEach(button => {
      button.addEventListener('click', function () {
        document.getElementById('Selectsize').value = this.dataset.size;
        document.querySelectorAll(".size-btn").forEach(b => b.classList.remove("btn-dark"));
        this.classList.add("btn-dark");
      });
    });
  </script>
</body>
</html>
